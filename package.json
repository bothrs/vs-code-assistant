{
  "name": "bothrs-assistant",
  "displayName": "Bothrs Assistant",
  "description": "A helpful extension to simplify the day to day work of Bothrs developer.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:bothrs-assistant.createComponentAtFolder"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Bothrs code assistant",
      "properties": {
        "bothrs.productTeam": {
          "type": "string",
          "default": "ambient",
          "enum": [
            "ambient",
            "commerce",
            "wap"
          ],
          "description": "Specify which Bothrs team's standard to use. Available options are \"ambient\", \"commerce\", \"wap\"."
        },
        "bothrs.framework": {
          "type": "string",
          "default": "react",
          "enum": [
            "react",
            "react-native"
          ],
          "description": "Specify the framework, currently supported options are \"react\" and \"react-native\"."
        },
        "bothrs.shouldOpenCreatedComponentFile": {
          "type": "boolean",
          "default": false,
          "description": "Specify if Bothrs Assistant should open the created component file."
        }
      }
    },
    "commands": [
      {
        "command": "bothrs-assistant.createComponentAtFolder",
        "title": "New Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bothrs-assistant.createComponentAtFolder",
          "group": "navigation@10",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "dev": "webpack --watch",
    "build": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
